{% extends 'content_base.html.twig' %}

{% block title %}
    {% trans %}Xác nhận đã nhận được tiền chuyển khoản{% endtrans %}
{% endblock %}

{% block content_body %}
    <h3 style="text-align: center">{% trans %}Xác nhận đã nhận được tiền chuyển khoản cho dự án:  {% endtrans %}{{ post.title }}</h3>
    <div class="row">

        <div class="col-md-5 col-xs-5 col-sm-5 col-lg-5">

            <div class="row">
                <div class="col">
                    {{ form_start(form) }}
                    {{ form_row((form.proofOfReveived)) }}
                    <button class="btn btn-primary" type="submit">
                        <span>{% trans %}Xác nhận đã nhận được tiền{% endtrans %}</span>
                    </button>
                    {{ form_end(form) }}
                </div>

            </div>


        </div>
    </div>
{% endblock %}

