{% extends 'content_base.html.twig' %}

{% block title %}
    {% trans %}dự án chờ chuyển khoản{% endtrans %}
{% endblock %}

{% block content_body %}
    <div>
        <h1>{% trans %} Danh sách dự án đang chờ Chuyển khoản{% endtrans %}</h1>
        <table class="table table-striped">
            <tr>
                <th>{% trans %} Dự án{% endtrans %}</th>
                <th>{% trans %} Người tạo  {% endtrans %}</th>
                <th>{% trans %} Số tiền quyên góp được {% endtrans %}</th>
                <th>{% trans %} Mục tiêu quyên góp {% endtrans %}</th>
                <th>{% trans %}Xác nhận chuyển khoản{% endtrans %}</th>
            </tr>
            {% for list_post in pagination %}
                <tr>
                    <td>{{ list_post.title }}</td>
                    <td>{{ list_post.user.firstname }} {{ list_post.user.lastname }}</td>
                    <td>{{ list_post.getTransactionSum}}</td>
                    <td>{{ list_post.targetAmount }}</td>
                    <td> <button class="btn btn-primary" onclick="location.href='{{ path('app_admin_confirmTransfertFund', {uniquekey: list_post.uniquekey}) }}'">{% trans %}Xác nhận chuyển khoản{% endtrans %}</button></td>
                </tr>

            {% endfor %}
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}

