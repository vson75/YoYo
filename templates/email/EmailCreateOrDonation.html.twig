{% apply inline_css(encore_entry_css_source('email')) %}
<!doctype html>
<html lang="vn">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width">
    <title>{{title}}</title>
</head>
<body>
<div class="body">
    <div class="container">
        <div class="header text-center">
            <a href="{{ url('app_homepage') }}">
                <img src="{{ absolute_url(asset('images/logo.png')) }}" class="logo" alt="Logo">
            </a>
        </div>
        <div class="content">
            <h1 class="text-center">{{title}}</h1>
            <p class="block">
                {% trans %}Cảm ơn bạn đã{% endtrans%} {{ action }} {{ post_name }}.

            </p>
            <p class="block">
                {{ caption_link_to_post }}
            </p>
            <p class="block text-center">
                <a href="{{ url('show_post', {uniquekey: post_uniqueKey}) }}" class="btn">{% trans %}Link tới dự án{% endtrans %}</a>
            </p>
            <p class="block">
                {% trans %}Nhằm duy trì tính minh bạch của các dự án, chúng tôi sẽ cập nhập thường xuyên
                các hoạt động mà bạn đã đóng góp.{% endtrans %}
            </p>
        </div>
        <div class="footer">
            <p class="block">
                {% trans %}Thân,{% endtrans %}
                <br><br>
                Yoyo
            </p>
            <p class="block bottom text-center">
                {% trans %}Dự án cua Viet Son NGUYEN{% endtrans %}
            </p>
        </div>
    </div>
</div>
</body>
</html>
{% endapply %}