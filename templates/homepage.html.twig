{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
{% endblock %}
{% block title %}YoYo{% endblock %}
{% block body %}
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4 imgbackground" style="background-image: url('{{ asset('images/nonlavietnam.jpg') }}');">

            <h1 class="display-3">{% trans %} A Warm Welcome! {% endtrans %}</h1>
            <p class="lead">{% trans %} Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat. {% endtrans %}</p>
            <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-lg">{% trans %} Tạo dự án mới {% endtrans %}</a>

        </header>

        <!-- Page Features -->
        <div class="row">
            {% for post in post %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">

                    {#if no image#}
                    {% if post.imagePath == 'uploads/post/image/' %}

                        <div>
                            <img class="card-img-top" src="{{ asset('uploads/post/default_img.jpeg') | imagine_filter('card_thumbnail_homepage')}}" alt="">

                            {% set finish = post.finishAt %}
                            {% set now = "now"|date("m/d/Y") %}
                            {% set diff = date(finish).diff(date(now)) %}
                            {% set leftDays = diff.days %}
                            {% if leftDays >10 %}
                                <div class="dayCountdownWhite">J-{{ leftDays }}</div>
                            {% else %}
                                <div class="dayCountdownRed">J-{{ leftDays }}</div>
                            {% endif %}

                        </div>

                    {% else %}
                            <img class="card-img-top" src="{{ asset(post.imagePath) | imagine_filter('card_thumbnail_homepage')}}" alt="">

                        {% set finish = post.finishAt %}
                        {% set now = "now"|date("m/d/Y") %}
                        {% set diff = date(finish).diff(date(now)) %}
                        {% set leftDays = diff.days %}
                        {% if leftDays >10 %}
                            <div class="dayCountdownWhite">J-{{ leftDays }}</div>
                        {% else %}
                            <div class="dayCountdownRed">J-{{ leftDays }}</div>
                        {% endif %}
                    {% endif %}
                    <div style="background-color: rgba(41,234,218,0.94); text-align: center">{{ post.getStatus.getStep }}</div>
                    <div class="card-body">
                        <h5 class="card-title text-left">{{ post.title }}</h5>

                        {{ post.content|raw }}

                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('show_post', {uniquekey: post.uniquekey}) }}" class="btn btn-primary">{% trans %} Xem chi tiết {% endtrans %}</a>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
        <!-- /.row -->

    </div>
{% endblock %}