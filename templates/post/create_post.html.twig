{% extends 'content_base.html.twig' %}


{% block title %}
    Tạo dự án mới
{% endblock %}

{% block content_body %}
    <h1 style="position: center">Tạo dự án mới</h1>


    {{ form_start(postForm) }}
    {{ form_errors(postForm) }}

    {{ form_row(postForm.title, {
        label: 'Dự án'
    }) }}
    {{ form_row(postForm.content, {
        label: 'Nội dung chi tiết'
    }) }}

    {{ form_widget(postForm) }}
    <button type="submit" class="btn btn-primary">Create!</button>
    {{ form_end(postForm) }}
{% endblock %}


