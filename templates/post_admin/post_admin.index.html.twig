{% extends 'content_base.html.twig' %}

{% block title %}Manage Post{% endblock %}


{% block content_body %}
    <div class="row">
        <div class="col-sm-12">
            <h1>Manage post ({{ pagination.getTotalItemCount }})</h1>

            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="find_post"
                           class="form-control"
                           value="{{ app.request.query.get('q') }}"
                           placeholder="rechercher par titre ou commentaire"
                    >
                    <div class="input-group-append">
                        <button type="submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Post</th>
                    <th>Auteur</th>
                    <th>Nombre participant</th>
                    <th>Cr√©e</th>
                </tr>
                </thead>
                <tbody>
                {% for postInfo in pagination %}
                    <tr>
                        <td>
                            <a href="{{ path('show_post', {'slug': postInfo.slug}) }}">
                                {{ postInfo.title }}
                            </a>
                        </td>
                        <td>
                            {{ postInfo.author }}
                        </td>
                        <td style="width: 20%;">
                            {{ postInfo.numberParticipant}}
                        </td>
                        <td>
                            {{ postInfo.publishedAt|date('d-m-Y') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No comments found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
