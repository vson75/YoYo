{% extends 'base.html.twig' %}

{% block title %}{% trans %}Chọn mật khẩu{% endtrans %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{# link template : https://bootsnipp.com/snippets/GavAo #}
{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="container alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div id="logreg-forms">


        <div class="row">

            <div class="col-sm-12">
                {{ form_start(passwordForm) }}

                {{ form_widget(passwordForm.password.first) }}
                {{ form_widget(passwordForm.password.second) }}

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    {% trans %}Chọn mật khẩu{% endtrans %}
                </button>
                {{ form_widget(passwordForm) }}
                {{ form_end(passwordForm) }}

            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}"></script>
{% endblock %}
