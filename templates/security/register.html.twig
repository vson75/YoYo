{% extends 'base.html.twig' %}

{% block title %}{% trans %}Đăng ký tài khoản !{% endtrans %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{# link template : https://bootsnipp.com/snippets/GavAo #}
{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="container alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div id="logreg-forms">


        <div class="row">

            <div class="col-sm-12">
                {{ form_start(registrationForm) }}

                {{ form_widget(registrationForm.firstname) }}
                {{ form_widget(registrationForm.lastname) }}
                {{ form_widget(registrationForm.email) }}

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    {% trans %}Đăng ký{% endtrans %}
                </button>
                <a href="{{ path('app_login') }}" id="cancel_signup"><i class="fas fa-angle-left"></i> Quay trở lại</a>
                {{ form_widget(registrationForm) }}
                {{ form_end(registrationForm) }}

            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}"></script>
{% endblock %}
